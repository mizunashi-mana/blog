{
  "permissions": {
    "allow": [
      "Bash(./scripts/playwright.sh test:*)",
      "Bash(make:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "eslint",
    "playwright",
    "manage-bg",
    "safe-file-delete"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Update|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx scripts/cc-hook-format-on-post-tool.ts"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx scripts/cc-hook-reject-and-prefer-tool.ts"
          }
        ]
      }
    ]
  }
}
