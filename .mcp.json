{
  "mcpServers": {
    "eslint": {
      "command": "npx",
      "args": [
        "@eslint/mcp"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp"
      ]
    },
    "safe-file-delete": {
      "command": "npx",
      "args": [
        "@mizunashi_mana/safe-file-deletion-mcp",
        "--allowed-directories=.",
        "--protected-patterns=.git,.claude,.devenv,node_modules,output"
      ]
    },
    "manage-bg": {
      "command": "npx",
      "args": [
        "@mizunashi_mana/manage-bg-mcp"
      ]
    }
  }
}
